.body
  .container
    = render 'mypage/side-bar'
    .container-main
      .card
        .card___information
          %h2 クレジットカード情報入力
          .card___information__content
            .card___information__content__detail
              %label カード番号
              %span 必須
              %br
              = text_field_tag "number", "", class: "card___information__content__detail__form", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
              .card___information__content__detail__image
                = image_tag ("クレカ.png"), class: "card___information__content__detail__image__image2"
              %br
              %label 有効期限
              %span 必須
              %br
              .card___information__content__detail__expire__date
                %select#exp_month{name: "exp_month", type: "text", class:"card___information__content__detail__expire__date__month"}
                  %option{value: ""} --
                  %option{value: "1"}01
                  %option{value: "2"}02
                  %option{value: "3"}03
                  %option{value: "4"}04
                  %option{value: "5"}05
                  %option{value: "6"}06
                  %option{value: "7"}07
                  %option{value: "8"}08
                  %option{value: "9"}09
                  %option{value: "10"}10
                  %option{value: "11"}11
                  %option{value: "12"}12
                %span 月/
                %select#exp_year{name: "exp_year", type: "text", class:"card___information__content__detail__expire__date__year"}
                  %option{value: ""} --
                  %option{value: "2019"}19
                  %option{value: "2020"}20
                  %option{value: "2021"}21
                  %option{value: "2022"}22
                  %option{value: "2023"}23
                  %option{value: "2024"}24
                  %option{value: "2025"}25
                  %option{value: "2026"}26
                  %option{value: "2027"}27
                  %option{value: "2028"}28
                  %option{value: "2029"}29
                %span 年
                .card___information__content__detail__expire__date__security
                  %label セキュリティコード
                  %span 必須
                  .card___information__content__detail__expire__date__security__code
                    = text_field_tag "cvc", "", class: "card___information__content__detail__expire__date__security__code__cvc", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc"
                    .card___information__content__detail__expire__date__security__code__submit
                    #card_token
                    = submit_tag "追加する", id: "token_submit", class:"card___information__content__detail__expire__date__security__code__submit__button"
                  .card___information__content__detail__expire__date__security-return
                    = link_to "マイページへ戻る", mypage_index_path, {class: "card___information__content__detail__expire__date__security-return__button"}
